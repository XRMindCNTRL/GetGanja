# Cannabis Delivery Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL connection string
# For Vercel Postgres: postgresql://username:password@host:port/database?sslmode=require
# For Railway: Get from Railway dashboard Variables tab
# For PlanetScale: Get from PlanetScale dashboard
DATABASE_URL=postgresql://username:password@localhost:5432/cannabis_delivery

# ==========================================
# AUTHENTICATION
# ==========================================
# JWT Secret - Generate a strong random string (min 32 characters)
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ==========================================
# STRIPE PAYMENT PROCESSING
# ==========================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ==========================================
# FIREBASE CONFIGURATION (Push Notifications)
# ==========================================
# Get these from Firebase Console > Project Settings > General > Your apps
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456789
FIREBASE_VAPID_KEY=your_vapid_key_for_push_notifications

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
# For Gmail: Use App Passwords, not your regular password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password

# ==========================================
# MAPS CONFIGURATION (Optional)
# ==========================================
# Get from https://account.mapbox.com/access-tokens/
MAPBOX_TOKEN=your_mapbox_access_token

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Frontend URLs for CORS (comma-separated)
FRONTEND_URL=https://cannabis-customer.vercel.app
VENDOR_URL=https://cannabis-vendor.vercel.app
DRIVER_URL=https://cannabis-driver.vercel.app
ADMIN_URL=https://cannabis-admin.vercel.app

# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV=production
PORT=5000

# ==========================================
# MONITORING & LOGGING (Optional)
# ==========================================
# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level: error, warn, info, debug
LOG_LEVEL=info

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# FILE UPLOAD (Optional)
# ==========================================
# For Cloudinary or AWS S3
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AWS S3 (Alternative to Cloudinary)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# ==========================================
# ANALYTICS (Optional)
# ==========================================
# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# ==========================================
# BACKUP CONFIGURATION (Optional)
# ==========================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ==========================================
# CACHE CONFIGURATION (Optional)
# ==========================================
# Redis for caching (if using Redis)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600  # 1 hour in seconds

# ==========================================
# WEBHOOK ENDPOINTS (Optional)
# ==========================================
# For external integrations
WEBHOOK_SECRET=your_webhook_secret_for_external_integrations

# ==========================================
# LEGAL & COMPLIANCE
# ==========================================
# Age verification settings
MINIMUM_AGE=21
AGE_VERIFICATION_ENABLED=true

# Business information
BUSINESS_NAME=Cannabis Delivery Platform
BUSINESS_ADDRESS=123 Business St, City, State 12345
BUSINESS_PHONE=+1-555-0123
BUSINESS_EMAIL=contact@cannabisdelivery.com
LICENSE_NUMBER=BUS-LIC-123456

# ==========================================
# DEVELOPMENT SETTINGS (Only for local development)
# ==========================================
# Uncomment for local development only
# DEBUG=true
# CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003
